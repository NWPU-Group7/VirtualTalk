<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#000"
             android:layout_gravity="center_vertical|center_horizontal"
             tools:context=".TalkActivity">


    <signalprocess.face.Live2dGLSurfaceView
        android:id="@+id/live2dView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <signalprocess.face.CameraPreview
        android:id="@+id/cam_preview"
        android:layout_width="191dp"
        android:layout_height="135dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="当前还没有人加入聊天室"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="?android:attr/textColorLinkInverse"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:typeface="sans" />

</FrameLayout>